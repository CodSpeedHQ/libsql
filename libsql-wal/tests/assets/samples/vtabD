CREATE TABLE t1(a, b);
CREATE INDEX i1 ON t1(a);
CREATE INDEX i2 ON t1(b);
CREATE VIRTUAL TABLE tv1 USING echo(t1);INSERT INTO t1 VALUES(i, i*i)
SELECT * FROM tv1 WHERE a = 1 OR b = 4SELECT * FROM tv1 WHERE a = 1 OR b = 1SELECT * FROM tv1 WHERE (a > 0 AND a < 5) OR (b > 15 AND b < 65)SELECT * FROM tv1 WHERE a < 500 OR b = 810000SELECT * FROM t1 WHERE a < 500
UNION ALL
SELECT * FROM t1 WHERE b = 810000 AND NOT (a < 500)SELECT * FROM tv1 WHERE a < 90000 OR b = 8100000000SELECT * FROM t1 WHERE a < 90000
UNION ALL
SELECT * FROM t1 WHERE b = 8100000000 AND NOT (a < 90000)SELECT * FROM tv1 WHERE a = 90001 OR b = 810000